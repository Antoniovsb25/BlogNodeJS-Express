{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Título: </label>
                <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}"required>
            <label for="slug">Slug: </label>
                <input type="text" name="slug" class="form-control" required value="{{postagem.slug}}">
            <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" class="form-control" required value="{{postagem.descricao}}">
            <label for="conteudo">Conteúdo: </label>
                <textarea type="text" name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="" class="form-select">
                {{#each categoria}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-2">Editar Postagem</button>
        </form>
    </div>
</div>